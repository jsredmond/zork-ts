{
  "name": "zork-rewrite",
  "version": "1.0.0",
  "description": "Modern TypeScript rewrite of Zork I",
  "main": "dist/main.js",
  "bin": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsx src/main.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "package": "npm run build && pkg dist/main.js --targets node20-macos-x64,node20-macos-arm64,node20-win-x64 --output releases/zork"
  },
  "pkg": {
    "targets": [
      "node20-macos-x64",
      "node20-macos-arm64",
      "node20-win-x64"
    ],
    "outputPath": "releases"
  },
  "keywords": ["zork", "interactive-fiction", "text-adventure"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "tsx": "^4.7.0"
  },
  "dependencies": {
    "fast-check": "^3.15.0"
  }
}
