{
  "id": "42-unusual-commands",
  "name": "Unusual Commands",
  "description": "Testing edge case command combinations and unusual parser inputs",
  "category": "edge-case",
  "priority": "medium",
  "entries": [
    {
      "command": "verbose",
      "expectedOutput": "Maximum verbosity.",
      "notes": "Set verbose mode"
    },
    {
      "command": "look",
      "expectedOutput": "West of House\nYou are standing in an open field west of a white house, with a boarded front\ndoor.\nThere is a small mailbox here.",
      "notes": "Look in verbose mode"
    },
    {
      "command": "brief",
      "expectedOutput": "Brief descriptions.",
      "notes": "Set brief mode"
    },
    {
      "command": "superbrief",
      "expectedOutput": "Superbrief descriptions.",
      "notes": "Set superbrief mode"
    },
    {
      "command": "verbose",
      "expectedOutput": "Maximum verbosity.",
      "notes": "Return to verbose mode"
    },
    {
      "command": "examine mailbox",
      "expectedOutput": "The small mailbox is closed.",
      "notes": "Examine before opening"
    },
    {
      "command": "open mailbox. take leaflet. read it.",
      "expectedOutput": "Opening the small mailbox reveals a leaflet.\nTaken.\n\"WELCOME TO ZORK!\n\nZORK is a game of adventure, danger, and low cunning. In it you will explore\nsome of the most amazing territory ever seen by mortals. No computer should be\nwithout one!\"",
      "notes": "Multiple commands with periods"
    },
    {
      "command": "inventory",
      "expectedOutput": "You are carrying:\n  A leaflet",
      "notes": "Check inventory"
    },
    {
      "command": "drop leaflet then take leaflet",
      "expectedOutput": "Dropped.\nTaken.",
      "notes": "Multiple commands with 'then'"
    },
    {
      "command": "examine the small mailbox",
      "expectedOutput": "The small mailbox is open.",
      "notes": "Using article 'the' in command"
    },
    {
      "command": "look at mailbox",
      "expectedOutput": "The small mailbox is open.",
      "notes": "Using 'look at' instead of 'examine'"
    },
    {
      "command": "l",
      "expectedOutput": "West of House\nYou are standing in an open field west of a white house, with a boarded front\ndoor.\nThere is a small mailbox here.",
      "notes": "Abbreviated 'look' command"
    },
    {
      "command": "i",
      "expectedOutput": "You are carrying:\n  A leaflet",
      "notes": "Abbreviated 'inventory' command"
    },
    {
      "command": "x mailbox",
      "expectedOutput": "The small mailbox is open.",
      "notes": "Abbreviated 'examine' command"
    },
    {
      "command": "examine mailbox",
      "expectedOutput": "The small mailbox is open.",
      "notes": "Repeat examine command (testing consistency)"
    },
    {
      "command": "x mailbox",
      "expectedOutput": "The small mailbox is open.",
      "notes": "Abbreviated examine again"
    },
    {
      "command": "wait",
      "expectedOutput": "Time passes...",
      "notes": "Wait command"
    },
    {
      "command": "z",
      "expectedOutput": "Time passes...",
      "notes": "Abbreviated 'wait' command"
    },
    {
      "command": "score",
      "expectedOutput": "Your score is 0 (total of 350 points), in 2 moves.\nThis gives you the rank of Beginner.",
      "notes": "Check score"
    },
    {
      "command": "version",
      "expectedOutput": "ZORK I: The Great Underground Empire\nCopyright (c) 1981, 1982, 1983 Infocom, Inc. All rights reserved.\nZORK is a registered trademark of Infocom, Inc.\nRelease 88 / Serial number 840726",
      "notes": "Check version information"
    }
  ],
  "metadata": {
    "created": "2024-12-07T00:00:00.000Z",
    "source": "original-game",
    "verified": false
  }
}
