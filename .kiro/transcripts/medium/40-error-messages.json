{
  "id": "40-error-messages",
  "name": "Error Messages",
  "description": "Testing various invalid commands and error conditions to verify error message parity",
  "category": "edge-case",
  "priority": "medium",
  "entries": [
    {
      "command": "xyzzy",
      "expectedOutput": "A hollow voice says \"Fool.\"",
      "notes": "Magic word in wrong location"
    },
    {
      "command": "take house",
      "expectedOutput": "You can't take that!",
      "notes": "Attempting to take an immovable object"
    },
    {
      "command": "go blarg",
      "expectedOutput": "I don't know the word \"blarg\".",
      "notes": "Unknown word in command"
    },
    {
      "command": "asdfghjkl",
      "expectedOutput": "I don't know the word \"asdfghjkl\".",
      "notes": "Complete nonsense word"
    },
    {
      "command": "north",
      "expectedOutput": "The door is boarded and you can't remove the boards.",
      "notes": "Attempting to go through blocked exit"
    },
    {
      "command": "open window",
      "expectedOutput": "The window is slightly ajar, but not enough to allow entry.",
      "notes": "Attempting to open window that can't be opened enough"
    },
    {
      "command": "break window",
      "expectedOutput": "Vandalism is not usually tolerated.",
      "notes": "Attempting destructive action"
    },
    {
      "command": "take",
      "expectedOutput": "What do you want to take?",
      "notes": "Incomplete command - missing object"
    },
    {
      "command": "put",
      "expectedOutput": "What do you want to put?",
      "notes": "Incomplete command - missing object and location"
    },
    {
      "command": "go",
      "expectedOutput": "Where do you want to go?",
      "notes": "Incomplete movement command"
    },
    {
      "command": "attack",
      "expectedOutput": "What do you want to attack?",
      "notes": "Incomplete attack command"
    },
    {
      "command": "open mailbox with sword",
      "expectedOutput": "You don't have that.",
      "notes": "Using object not in inventory"
    },
    {
      "command": "take mailbox",
      "expectedOutput": "It is securely anchored.",
      "notes": "Attempting to take fixed object"
    },
    {
      "command": "eat mailbox",
      "expectedOutput": "I don't think that the small mailbox would agree with you.",
      "notes": "Attempting to eat inedible object"
    },
    {
      "command": "smell",
      "expectedOutput": "You smell nothing unusual.",
      "notes": "Smell command with no specific object"
    },
    {
      "command": "listen",
      "expectedOutput": "You hear nothing unusual.",
      "notes": "Listen command with no specific object"
    },
    {
      "command": "jump",
      "expectedOutput": "Wheeeeeeeeee!!!!!",
      "notes": "Jump command - silly response"
    },
    {
      "command": "sing",
      "expectedOutput": "Your singing is abominable.",
      "notes": "Sing command - humorous response"
    },
    {
      "command": "pray",
      "expectedOutput": "If you pray enough, your prayers may be answered.",
      "notes": "Pray command - context-dependent response"
    },
    {
      "command": "curse",
      "expectedOutput": "Such language in a high-class establishment like this!",
      "notes": "Curse command - humorous response"
    }
  ],
  "metadata": {
    "created": "2024-12-07T00:00:00.000Z",
    "source": "original-game",
    "verified": false
  }
}
